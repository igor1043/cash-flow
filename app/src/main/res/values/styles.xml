<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
    </style>

    <style name="CustomDateText">
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="CustomWeekDayText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="AppTheme.NoActionBar.FullScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ChipCustomFilter" parent="Base.Widget.MaterialComponents.Chip">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">5dp</item>

        <item name="chipIconVisible">false</item>
        <item name="closeIconVisible">false</item>
        <item name="android:checkable">true</item>

        <item name="checkedIconEnabled">false</item>

        <item name="android:textColor">@color/white</item>

        <item name="chipBackgroundColor">@color/colorPrimary</item>

        <item name="rippleColor" tools:ignore="PrivateResource">@color/mtrl_choice_chip_ripple_color</item>

    </style>

</resources>